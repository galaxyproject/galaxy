<macros>
    <xml name="data">
        <data_sources>
            <data_source>
                <model_class>HistoryDatasetAssociation</model_class>
                <test type="isinstance" test_attr="datatype" result_type="datatype">tabular.Tabular</test>
                <test type="isinstance" test_attr="datatype" result_type="datatype">tabular.CSV</test>
                <to_param param_attr="id">dataset_id</to_param>
            </data_source>
        </data_sources>
        <params>
            <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
        </params>
    </xml>
    <xml name="specs">
        <exports>
            <exports>png</exports>
        </exports>
    </xml>
    <xml name="groups">
        <input>
            <label>Provide a label</label>
            <name>key</name>
            <type>text</type>
            <placeholder>Data label</placeholder>
            <value>Data label</value>
        </input>
    </xml>
    <xml name="groups_bar">
        <input>
            <name>x</name>
            <label>Values for x-axis</label>
            <type>data_column</type>
            <is_label>true</is_label>
            <is_auto>true</is_auto>
        </input>
        <input>
            <name>y</name>
            <label>Values for y-axis</label>
            <type>data_column</type>
            <is_numeric>true</is_numeric>
        </input>
    </xml>
    <xml name="settings">
        <input>
            <name>x_axis_label</name>
            <label>X-Axis label</label>
            <help>Provide a label for the axis.</help>
            <type>text</type>
            <value>X-axis</value>
            <placeholder>Axis label</placeholder>
        </input>
        <input>
            <name>x_axis_grid</name>
            <label>X-Axis grid</label>
            <help>Would you like to show grid lines for the X axis?</help>
            <type>boolean</type>
            <value>false</value>
        </input>
        <input>
            <name>x_axis_type</name>
            <type>conditional</type>
            <test_param>
                <name>type</name>
                <label>X-Axis value type</label>
                <type>select</type>
                <value>auto</value>
                <help>Select the value type of the axis.</help>
                <data>
                    <data>
                        <value>hide</value>
                        <label>-- Do not show values --</label>
                    </data>
                    <data>
                        <value>auto</value>
                        <label>Auto</label>
                    </data>
                    <data>
                        <value>d</value>
                        <label>Integer</label>
                    </data>
                    <data>
                        <value>e</value>
                        <label>Exponent</label>
                    </data>
                    <data>
                        <value>f</value>
                        <label>Float</label>
                    </data>
                    <data>
                        <value>p</value>
                        <label>Percent</label>
                    </data>
                    <data>
                        <value>s</value>
                        <label>SI-prefix</label>
                    </data>
                </data>
            </test_param>
            <cases>
                <cases>
                    <value>hide</value>
                </cases>
                <cases>
                    <value>auto</value>
                </cases>
                <cases>
                    <value>d</value>
                </cases>
                <cases>
                    <value>e</value>
                    <inputs>
                        <inputs>
                            <name>precision</name>
                            <label>Axis tick format</label>
                            <help>Select the tick format for the axis.</help>
                            <type>select</type>
                            <value>1</value>
                            <data>
                                <data>
                                    <label>0.00001</label>
                                    <value>5</value>
                                </data>
                                <data>
                                    <label>0.0001</label>
                                    <value>4</value>
                                </data>
                                <data>
                                    <label>0.001</label>
                                    <value>3</value>
                                </data>
                                <data>
                                    <label>0.01</label>
                                    <value>2</value>
                                </data>
                                <data>
                                    <label>0.1</label>
                                    <value>1</value>
                                </data>
                                <data>
                                    <label>1</label>
                                    <value>0</value>
                                </data>
