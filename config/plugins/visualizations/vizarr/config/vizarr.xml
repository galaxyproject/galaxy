<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="Vizarr Viewer">
    <description>Basic visualization for Zarr-based images like OME-Zarr</description>
    <requirements>
        <requirement type="npm" version="0.1.2" package="galaxy-vizarr"/>
    </requirements>
    <entry_point entry_point_type="script" src="dist/index.js" css="dist/index.css" />
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>

            <test type="isinstance" test_attr="datatype" result_type="datatype" allow_deferred="true">data.ZarrDirectory</test>
            <test type="isinstance" test_attr="datatype" result_type="datatype" allow_deferred="true">images.OMEZarr</test>

            <to_param param_attr="id">dataset_id</to_param>
        </data_source>
    </data_sources>
    <params>
        <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
    </params>
</visualization>
