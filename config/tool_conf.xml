    <tool file="amp_ner/spacy.xml"/>
    <tool file="amp_ner/aws_comprehend.xml"/>
    <tool file="amp_ner/ner_to_csv.xml"/>
  </section>

  <section id="video_processing" name="Video Indexing">
    <tool file="amp_video/azure_video_indexer.xml"/>
