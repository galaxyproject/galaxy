<tool id="speech_segmenter" name="INA Speech Segmenter" version="1.0.0">
  <description>Create speech segmentations containing type, gender, start offset, and end offset</description>
    <requirements>
    </requirements>
  <command detect_errors="exit_code">$__tool_directory__/ina_speech_segmenter_wrapper.py $input $amp_segmentation</command>
   <inputs>
   <!-- should be wave data type -->
    <param name="input" type="data" format="audio" label="Input Audio" help="An audio file"/>
  </inputs>
  <outputs>
    <data name="amp_segmentation" format="segment" label="AMP Segments Generated"/>
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Segment an audio file using INA speech segmenter.

  </help>
</tool>
