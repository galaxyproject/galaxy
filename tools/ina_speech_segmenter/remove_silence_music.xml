<tool id="ISS-2" name="Remove Silence and Music" version="1.0.0">
  <description>Create an audio file containing only speech, removing silence and music</description>
    <requirements>
    </requirements>
  <command detect_errors="exit_code">
  $__tool_directory__/remove_silence_music.py $input $input_segmentation_json $binary_out $removed_segments_json</command>
   <inputs>
   <!-- should be wave data type -->
    <param name="input" type="data" format="data" label="From audio file" help="An audio file"/>
    <param name="input_segmentation_json" type="data" format="json" label="From segmentation" help="Segmentation json file"/>
  </inputs>
  <outputs>
    <data format="binary" name="binary_out" />
    <data format="json" name="removed_segments_json" />
  </outputs>
  <tests>
  </tests>
  <help>
.. class:: infomark

Remove silence and music from an audio file, creating an audio file containing only speech

  </help>
</tool>
