        <param name="failbool" type="boolean" label="The failure property" checked="false" />
    </inputs>
    <outputs>
        <data name="out_file1" format="txt" from_work_dir="foo.txt" />
    </outputs>
    <tests>
    </tests>
    <help>
    </help>
</tool>
