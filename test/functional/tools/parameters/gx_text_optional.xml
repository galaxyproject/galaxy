<tool id="gx_text_optional" name="gx_text_optional" version="1.0.0">
    <command><![CDATA[
echo '$parameter' >> '$output';
cat '$inputs' >> $inputs_json;
    ]]></command>
    <configfiles>
        <inputs name="inputs" filename="inputs.json" />
    </configfiles>
    <inputs>
        <param name="parameter" type="text" optional="true" />
    </inputs>
    <outputs>
        <data name="output" format="txt" />
        <data name="inputs_json" format="json" />
    </outputs>
    <tests>
        <test>
            <param name="parameter" value="12456" />
            <output name="output">
                <assert_contents>
                    <has_line line="12456" />
                </assert_contents>
            </output>
        </test>
    </tests>
</tool>
