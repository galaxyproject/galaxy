<tool id="gx_data_collection_paired" name="gx_data_collection_paired" version="1.0.0" profile="24.2">
    <command><![CDATA[cat '$parameter.forward' '$parameter.reverse' >> '$output']]></command>
    <inputs>
        <param name="parameter" type="data_collection" collection_type="paired" format="data" />
    </inputs>
    <outputs>
        <data name="output" format="data" />
    </outputs>
    <tests>
        <test expect_failure="true">
            <param name="parameter">
                <collection type="paired">
                    <element name="forward" ftype="txt" value="simple_line.txt" />
                    <element name="reverse" ftype="txt" value="simple_line.txt" />
                </collection>
            </param>
        </test>
    </tests>
</tool>
