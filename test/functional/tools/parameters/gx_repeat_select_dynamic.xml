<tool id="gx_repeat_select_dynamic" name="gx_repeat_select_dynamic" version="1.0.0">
    <command><![CDATA[
echo '$repeat_parameter[0].parameter' >> '$output'
    ]]></command>
    <code file="gx_select_dynamic_options.py"/>
    <inputs>
        <repeat name="repeat_parameter">
            <param name="ref_parameter" type="data" ext="txt" >
            </param>
            <param name="parameter" type="select" dynamic_options="every_other_word(ref_parameter.dataset.get_file_name())">
            </param>
        </repeat>
    </inputs>
    <outputs>
        <data name="output" format="txt" />
    </outputs>
    <tests>
        <test>
            <repeat name="repeat_parameter">
                <param name="ref_parameter" value="simple_line.txt" />
                <param name="parameter" value="of" />
            </repeat>
            <output name="output">
                <assert_contents>
                    <has_line line="of" />
                </assert_contents>
            </output>
        </test>
        <test>
            <!-- Selects implicitly default to the first option as the default option.
            -->
            <repeat name="repeat_parameter">
                <param name="ref_parameter" value="simple_line.txt" />
            </repeat>
            <output name="output">
                <assert_contents>
                    <has_line line="This" />
                </assert_contents>
            </output>
        </test>
    </tests>
</tool>
